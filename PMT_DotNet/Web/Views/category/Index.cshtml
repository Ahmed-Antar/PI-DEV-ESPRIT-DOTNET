@model IEnumerable<Domain.Entities.category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>



<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> List Of Categories</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i>IdCategory</th>

                        <th><i class="fa fa-bookmark"></i> Name</th>

                        <th></th>
                    </tr>
                </thead>
             
@foreach (var item in Model)
{
             
                <tbody>
                    <tr>
                        <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.IdCategory)</a></td>
                        <td class="hidden-phone">@Html.DisplayFor(modelItem => item.Name)</td>
                        
                        <td>
                            <a href="@Url.Action("Edit"  , new { id = item.IdCategory })">
                                    
                                    <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
                            
                                <a href="@Url.Action("Delete"  , new { id = item.IdCategory })">
                                    
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
</td>
                    </tr>
                    
                   
                   
                   
                </tbody>
}
            </table>
        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->

@section Styles {
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}


